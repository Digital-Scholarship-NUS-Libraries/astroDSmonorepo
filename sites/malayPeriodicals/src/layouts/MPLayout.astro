---
// Component Imports
import { BaseLayout } from '@libdsastro/ui';
import navigation from "../data/navigation.json"

const { title, banner } = Astro.props;
---
<BaseLayout title={ title } navItems={ navigation }>
  <div class="h-[250px]" style={`background: url('${ banner }') center no-repeat`}>
    <div class="container mx-auto pt-10 md:pt-16 px-5 md:px-0 prose prose-img:mt-0 text-center">
      <h1 class="font-serif">{ title }</h1>
      <img src="/assets/flourish.svg" alt="a nice flourish" class="w-1/3 mx-auto"/>
    </div>
  </div>
  <article class="container mt-5 px-5 md:px-0 prose mx-auto lg:prose-xl text-justify">
    <slot />
  </article>
</BaseLayout>
