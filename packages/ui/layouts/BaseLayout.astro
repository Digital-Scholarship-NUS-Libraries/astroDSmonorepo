---
import { ViewTransitions } from "astro:transitions";
import { Header } from "../index.js";
import { NavBar } from "../index.js";
import { Footer } from "../index.js";

export interface Props {
  title: string;
  navItems?: { text: string; url: string }[];
  partnerLogos?: { altText: string; url: string; image: string }[];
}

const { title, navItems, partnerLogos } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/x-icon"
      href=`${import.meta.env.BASE_URL}favicon.ico`
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header partnerLogos={partnerLogos} />
    {navItems && <NavBar navItems={navItems} />}
    <slot />
    <Footer />
  </body>
</html>
